<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/streakFlame"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:lottie_rawRes="@raw/streaks"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/streakTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Tracker Streak"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/streakFlame"
            app:layout_constraintStart_toEndOf="@id/streakFlame"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/streakDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="ðŸ”¥ Logged expenses for 7 days straight!"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/streakTitle"
            app:layout_constraintStart_toEndOf="@id/streakFlame"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
